<Window x:Class="StarterTeclatMouseControlsDinàmics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarterTeclatMouseControlsDinàmics"
        mc:Ignorable="d"
        Title="Controls dinàmics" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Controls dinàmics">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <local:Graella Grid.Row="1" Grid.Column="0" x:Name="Graella"/>
                <Slider Grid.Row="0" Grid.Column="0" Minimum="1" Maximum="50" Orientation="Horizontal" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="SldNumFiles_ValueChanged"/>
            </Grid>
        </TabItem>
        <TabItem Header="Cronòmetre">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="tbkCronometre"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
                    Text="00:00:00"
                    FontSize="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    />
                <Button
                    x:Name="btnIniciar"
                    Grid.Column="0"
                    Grid.Row="1"
                    Content="Iniciar"
                    Margin="10"
                    />
                <Button
                    x:Name="btnParar"
                    Grid.Column="1"
                    Grid.Row="1"
                    Content="Parar"
                    Margin="10"
                    />
            </Grid>
        </TabItem>
        <TabItem Header="Teclat">
            <Grid 
                x:Name="grdFinestra"
                Margin="25"
                Background="Aquamarine">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DockPanel LastChildFill="False"
                    x:Name="dckEsquerra"
                    Margin="25"
                    Background="Beige">
                    <TextBlock 
                        Margin="15"
                        DockPanel.Dock="Top"
                        x:Name="tbkVermell"
                        Background="Red"
                        Text="Vermell"
                        />
                    <TextBlock 
                        Margin="15"
                        DockPanel.Dock="Top"
                        x:Name="tbkGroc"
                        Background="Yellow"
                        Text="Groc"
                        />
                    <TextBlock 
                        Margin="15"
                        DockPanel.Dock="Top"
                        x:Name="tbkVerd"
                        Background="Green"
                        Text="Verd"
                        />
                    <Image x:Name="imgDaus" Source="Imatges/daus.png"/>
                    <Image x:Name="imgBolet" Source="Imatges/bolet.png"/>
                </DockPanel>
            <DockPanel
                x:Name="dckDreta"
                Margin="25"
                Background="LightYellow" Grid.Column="1"
                >
                    <Button 
                        Margin="15"
                        DockPanel.Dock="Top"
                        x:Name="btnFocus"
                        Content="Posa el focus aquí"
                        />
                    <TextBlock
                        Margin="5"
                        x:Name="Resultat2"
                        DockPanel.Dock="Bottom"
                        Text="Resultat 2:"/>
                    <TextBlock
                        Margin="5"
                        x:Name="Resultat1"
                        DockPanel.Dock="Bottom"
                        Text="Resultat 1:"/>
                    <TextBox 
                        x:Name="txtText"
                        />
                </DockPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Pissarra">
            <DockPanel>
                <StackPanel
                    Orientation="Horizontal" DockPanel.Dock="Top">
                            <TextBlock x:Name="tbX" Text="X: "/>
                            <TextBlock x:Name="tbY" Text="Y: "
                               Margin=" 20,0,0,0"/>
                        </StackPanel>
                <Canvas
                    Background="AliceBlue"
                    x:Name="cnvPissarra"/>
            </DockPanel>
        </TabItem>
    </TabControl>
</Window>
