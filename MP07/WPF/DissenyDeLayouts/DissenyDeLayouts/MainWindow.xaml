<Window x:Class="DissenyDeLayouts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DissenyDeLayouts"
        mc:Ignorable="d"
        Title="DissenyDeLayouts" Height="450" Width="800"
        Background="Gray">
    <Grid Margin="60" Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Calculadora" Margin="8" Click="BtnOpenCalculadoraOnClick"/>
        <Button Grid.Row="1" Content="Imatge" Margin="8" Click="BtnOpenImageOnClick"/>
        <Button Grid.Row="2" Content="Formulari" Margin="8" Click="BtnOpenFormulariOnClick"/>
        <Button Grid.Row="3" Content="Tria de colors" Margin="8" Click="BtnOpenTriaColorOnClick"/>
        <Button Grid.Row="4" Content="Columnes d'articles" Margin="8" Click="BtnOpenColumnesArticlesrOnClick"/>
        <Button Grid.Row="5" Content="Columnes d'articles amb molts botons" Margin="8" Click="BtnOpenEx7OnClick"/>
    </Grid>
</Window>
